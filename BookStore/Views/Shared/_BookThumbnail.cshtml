@model BookModel

<div class="card mb-4 shadow-sm">
    <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl) ? "/files/books/coverImages/NotFound.png" : Model.CoverImageUrl)" 
        class="img-thumbnail" asp-append-version="true" />
    <div class="card-body">
        <div class="card-title h5">
            @(string.IsNullOrEmpty(Model.Title) ? "Name is not available" : Model.Title)
        </div>
        <div class="d-flex justify-content-between align-items-center">
            <small>by @(string.IsNullOrEmpty(Model.Author) ? "NA" : Model.Author)</small>
            <a asp-controller="book" asp-action="getbook" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Details</a>
        </div>
    </div>
</div>